<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PokeApi.View.PokemonView">
  <ContentView.Content>

        <ListView
            CachingStrategy="RecycleElement"
            ItemsSource="{Binding Items}"
            RowHeight="70">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Margin="8">
                            <Label
                                FontAttributes="Bold"
                                FontSize="Subtitle"
                                Text="{Binding PokemonID}" />
                            <Label
                                FontAttributes="None"
                                FontSize="Body"
                                Text="{Binding Name}" />
                            <Line Stroke="Gray" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

    </ContentView.Content>
</ContentView>